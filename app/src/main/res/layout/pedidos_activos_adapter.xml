<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgpedidactiv"
        android:layout_width="106dp"
        android:layout_height="122dp"
        app:srcCompat="@drawable/product" />

    <TextView
        android:id="@+id/nompedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomproy"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_toEndOf="@id/imgpedidactiv"/>

    <TextView
        android:id="@+id/desPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:layout_toEndOf="@id/imgpedidactiv"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:layout_below="@id/nompedido"/>

    <TextView
        android:id="@+id/fechaPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:layout_toEndOf="@id/imgpedidactiv"
        android:paddingBottom="10dp"
        android:layout_below="@id/desPedido"
        android:paddingStart="20dp"
        android:paddingEnd="100dp"/>

</RelativeLayout>