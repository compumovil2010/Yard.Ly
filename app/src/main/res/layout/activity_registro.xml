<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:layout_margin="10dp"
    android:background="@color/clr_justWhite">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textAppearance="@style/txt_Big"
        android:layout_margin="20dp"
        android:textColor="@color/clr_greenYardly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider5"
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:background="@color/clr_greenYardly"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        tools:layout_editor_absoluteY="83dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5">


        <EditText
            android:id="@+id/et_nombreUsRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="@drawable/frm_rreditt"
            android:drawablePadding="10dp"
            android:hint="@string/nombres"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/txt_kindaBig"
            android:textColorHint="@color/clr_greenYardly" />

        <EditText
            android:id="@+id/apellidoUsRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="@drawable/frm_rreditt"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/apellidos"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/txt_kindaBig"
            android:textColorHint="@color/clr_greenYardly" />

        <EditText
            android:id="@+id/mailUsRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="@drawable/frm_rreditt"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/txt_kindaBig"
            android:textColorHint="@color/clr_greenYardly" />

        <EditText
            android:id="@+id/passUsRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="@drawable/frm_rreditt"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/txt_kindaBig"
            android:textColorHint="@color/clr_greenYardly" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="@drawable/frm_rreditt"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/txt_kindaBig"
            android:textColorHint="@color/clr_greenYardly" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="356dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/cacelarRegistro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@font/cg_family"
            android:padding="5dp"
            android:text="@string/cncel"
            android:textColor="@color/clr_greenYardly"

            android:textSize="20sp" />

        <Button
            android:id="@+id/registrarForm"
            style="@style/btn_Stl1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/continuar"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>